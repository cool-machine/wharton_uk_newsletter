{
  "name": "wharton-uk-newsletter-builder",
  "version": "1.0.0",
  "description": "Professional newsletter builder for The Wharton Club of the United Kingdom",
  "main": "index.html",
  "scripts": {
    "start": "npx http-server -p 8080 -o",
    "dev": "npx http-server -p 8080 -o",
    "build": "npm run lint && npm run format:check",
    "lint": "npx eslint *.js",
    "lint:fix": "npx eslint *.js --fix",
    "format": "npx prettier --write *.html *.md *.json",
    "format:check": "npx prettier --check *.html *.md *.json",
    "test": "npx playwright test",
    "test:ui": "npx playwright test --ui",
    "validate": "npx html-validate *.html",
    "deploy": "gh-pages -d ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cool-machine/wharton_uk_newsletter.git"
  },
  "keywords": [
    "newsletter",
    "wharton",
    "alumni",
    "email-builder",
    "html-editor",
    "rich-text-editor",
    "responsive-design",
    "gmail-optimized"
  ],
  "author": "Cool Machine <cool.lstm@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cool-machine/wharton_uk_newsletter/issues"
  },
  "homepage": "https://cool-machine.github.io/wharton_uk_newsletter/",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "eslint": "^8.57.0",
    "html-validate": "^8.7.4",
    "http-server": "^14.1.1",
    "prettier": "^3.1.1",
    "gh-pages": "^6.1.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "> 1%"
  ]
}